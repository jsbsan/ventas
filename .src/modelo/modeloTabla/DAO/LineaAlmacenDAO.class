Public Function GeneradorCodigoFormulario(tipo As String, Optional datosEditar As LineaAlmacenVO) As String
  
  Dim codigocampos As String
  
  If tipo = "registrar" Then 
    codigocampos &= "null|id|null;"
    codigocampos &= "valuebox|idProducto|" & ("idProducto") & "|0;"
    codigocampos &= "valuebox|cantidad|" & ("cantidad") & "|0;"
    codigocampos &= "textbox|tipo|" & ("tipo") & "|;"
    codigocampos &= "datebox|fecha|" & ("fecha") & "|" & Format$(Now, Me.formatofecha) & ";"
  Else
    codigocampos &= "null|id|null;"
    codigocampos &= "valuebox|idProducto|" & ("idProducto") & "|" & datosEditar.idProducto & ";"
    codigocampos &= "valuebox|cantidad|" & ("cantidad") & "|" & datosEditar.cantidad & ";"
    codigocampos &= "textbox|tipo|" & ("tipo") & "|" & datosEditar.tipo & ";"
    codigocampos &= "datebox|fecha|" & ("fecha") & "|" & Format$(datosEditar.fecha, Me.formatofecha) & ";"
  Endif
  Return codigocampos
  
End

Public Function NombreCampos() As Collection
  
  Dim codigocampos As New Collection
  Dim textocamposTraducidos As String
  Dim textocampos As String
  
  textocamposTraducidos = ("id") & "|" & ("idProducto") & "|" & ("cantidad") & "|" & ("tipo") & "|" & ("fecha")
  textocampos = "id" & "|" & "idProducto" & "|" & "cantidad" & "|" & "tipo" & "|" & "fecha"
  codigocampos.add(textocamposTraducidos, "traducidos")
  codigocampos.add(textocampos, "sintraducidos")
  Return codigocampos
  
End

