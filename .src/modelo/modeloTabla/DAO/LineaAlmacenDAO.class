  resultado.MoveTo(numero)
  Try grid[0, 1].text = Str$(resultado!id)
  Try grid[1, 1].text = Str$(resultado!idProducto)
  Try grid[2, 1].text = Str$(resultado!cantidad)
  Try grid[3, 1].text = Str$(resultado!tipo)
  Try grid[4, 1].text = Str$(resultado!fecha)
  
End

