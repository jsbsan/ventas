Public Sub ord_AZ(grid As GridView, a As Integer)
  'a: indica la columna a la que ordenamos
  'grid: es la rejilla que ordenamos

  Dim limite As Integer
  Dim cambio1 As String
  Dim i As Integer
  Dim j As Integer
  Dim col As Integer

  limite = grid.Rows.COUNT
  If (grid.Columns.COUNT < a + 1) Or a < 0 Then
    Message.Error("Error en la columna introducida para ordenar")
    grid.visible = True
    Return

  Endif
  For i = 0 To limite - 1
    For j = 0 To limite - 2
      If UCase$(Grid[j, a].Text) > UCase$(Grid[j + 1, a].Text) Then

        For col = 0 To grid.Columns.COUNT - 1
          cambio1 = Grid[j, col].Text
          Grid[j, col].text = Grid[j + 1, col].Text
          Grid[j + 1, col].text = cambio1

        Next

      Endif
    Next
  Next

End

'------------------------------------------------------------------------
Public Sub ord_ZA(grid As GridView, a As Integer)
  'a: indica la columna a la que ordenamos
  'grid: es la rejilla que ordenamos

  Dim limite As Integer
  Dim cambio1 As String
  Dim i As Integer
  Dim j As Integer
  Dim col As Integer

  limite = grid.Rows.COUNT
  If (grid.Columns.COUNT < a + 1) Or a < 0 Then
    Message.Error("Error en la columna introducida para ordenar")
    grid.visible = True
    Return

  Endif
  For i = 0 To limite - 2

    For j = i To limite - 1
      If UCase$(Grid[i, a].Text) <= UCase$(Grid[j, a].Text) Then
        For col = 0 To grid.Columns.COUNT - 1
          cambio1 = Grid[j, col].Text
          Grid[j, col].text = Grid[i, col].Text
          Grid[i, col].text = cambio1
        Next
      Endif
    Next
  Next

End

Public Function ConvertirResult(hr As Result) As INVENTARIOVALORADOVO[]

  Dim datos As New INVENTARIOVALORADOVO[]
  Dim datotmp As INVENTARIOVALORADOVO

  While hr.available
    datotmp = New INVENTARIOVALORADOVO
    Try datotmp.sumaEntrada_codigo = hr["sumaEntrada_codigo"]
    Try datotmp.sumaEntrada_nombre = hr["sumaEntrada_nombre"]
    Try datotmp.sumaEntrada_idproducto = hr["sumaEntrada_idproducto"]
    Try datotmp.sumaEntrada_precio = hr["sumaEntrada_precio"]
    Try datotmp.ENTRADA = hr["ENTRADA"]
    Try datotmp.COSTE_ENTRADA = hr["COSTE_ENTRADA"]
    Try datotmp.VENTA = hr["VENTA"]
    Try datotmp.COSTE_VENTA = hr["COSTE_VENTA"]
    Try datotmp.ROTURA = hr["ROTURA"]
    Try datotmp.COSTE_ROTURA = hr["COSTE_ROTURA"]
    Try datotmp.ROBO = hr["ROBO"]
    Try datotmp.COSTE_ROBO = hr["COSTE_ROBO"]
    Try datotmp.EXISTENCIA_ALMACEN = hr["EXISTENCIA_ALMACEN"]
    Try datotmp.COSTE_ALMACEN = hr["COSTE_ALMACEN"]
    Try datos.add(datotmp)
    hr.movenext
  Wend
  Return datos

End

